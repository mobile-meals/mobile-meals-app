<div style="position: relative;">
	<div data-role="page" id="login" style="position: absolute;">
		<%- include ("../partials/headers/TopNavBarBackOnly"); %>
			<div data-role="content" class="ui-content content-main">
				<h3 class="text-regular">Welcome Back</h3>
				<h2>+94 77 123 4596</h2>
				<p>Enter your password to login</p>
				<form id="login-form" action="#">
					<div class="input-group">
						<label for="password">Password</label>
						<input type="password" id="password" name="password" placeholder="password" required>
						<div class="forgot-pw-link">
							<a href="#reset-password" onclick="openDialog()">Forgot Password?</a>
						</div>
					</div>
					<button class="ui-widget ui-corner-all" type="submit">Proceed<span
							class="button-icon"><svg class="button-icon" fill="none" viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
									d="m14 5 7 7m0 0-7 7m7-7H3" />
							</svg></span></button>
				</form>
			</div><!-- /content -->
	</div><!-- /page -->

	<div data-role="dialog" id="reset-password" style="position: absolute;">
		<!-- <%- include ("../partials/headers/TopNavBarBackOnly"); %> -->
			<div data-role="content" class="ui-content content-main">
				<h1>Password Reset</h1>
				<p>Enter your email here and we will send you a password reset email.</p>
				<form id="password-reset-form" action="#">
					<div class="input-group">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" placeholder="email" required>
					</div>
					<button class="ui-widget ui-corner-all" type="submit">Reset password<span
							class="button-icon"><svg class="button-icon" fill="none" viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
									d="m14 5 7 7m0 0-7 7m7-7H3" />
							</svg></span></button>
				</form>
			</div><!-- /content -->
	</div><!-- /page -->
</div>

<script>
	function openDialog(){
		document.getElementById("reset-password").style.display = "inherit"
	}
</script>